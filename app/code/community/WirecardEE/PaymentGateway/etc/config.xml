        <events>
            <controller_front_init_before>
                <observers>
                    <wirecard_ee_composer_autoload>
                        <type>singleton</type>
                        <class>paymentgateway/observer</class>
                        <method>controllerFrontInitBefore</method>
                    </wirecard_ee_composer_autoload>
                </observers>
            </controller_front_init_before>

            <sales_order_payment_cancel>
                <observers>
                    <wirecard_ee_cancel>
                        <type>singleton</type>
                        <class>paymentgateway/backendOperation</class>
                        <method>cancel</method>
                    </wirecard_ee_cancel>
                </observers>
            </sales_order_payment_cancel>

            <sales_order_invoice_pay>
                <observers>
                    <wirecard_ee_capture>
                        <type>singleton</type>
                        <class>paymentgateway/backendOperation</class>
                        <method>capture</method>
                    </wirecard_ee_capture>
                </observers>
            </sales_order_invoice_pay>

            <sales_order_payment_refund>
                <observers>
                    <wirecard_ee_refund>
                        <type>singleton</type>
                        <class>paymentgateway/backendOperation</class>
                        <method>refund</method>
                    </wirecard_ee_refund>
                </observers>
            </sales_order_payment_refund>

            <controller_action_predispatch>
                <observers>
                    <wirecard_ee_check_session_messages>
                        <type>singleton</type>
                        <class>paymentgateway/backendOperation</class>
                        <method>checkSessionMessages</method>
                    </wirecard_ee_check_session_messages>
                </observers>
            </controller_action_predispatch>
        </events>

        <resources>
            <paymentgateway_setup>
                <setup>
                    <module>WirecardEE_PaymentGateway</module>
                </setup>
            </paymentgateway_setup>
        </resources>
    </global>

